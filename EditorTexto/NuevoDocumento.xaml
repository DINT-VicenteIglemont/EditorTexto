<Window x:Class="EditorTexto.NuevoDocumento"
        x:Name="EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorTexto"
        mc:Ignorable="d"
        Title="Editor de texto" Height="450" Width="800" Closing="Window_Closing" Icon="NuevoDocumento.ico">
    
    <DockPanel LastChildFill="True">

        <Button x:Name="GuardarButton" DockPanel.Dock="Bottom" Content="Guardar fichero" Margin="10" Click="GuardarButton_Click"/>
        <TextBox x:Name="ContenidoTextBlock" Text="" AcceptsReturn="True"/>

    </DockPanel>
    
</Window>
